@using UserManager.Entities;
<html>
<head>
    <title>
        Книжарница
        
    </title>
</head>
<body>

    <style type="text/css">
        body{
            background-image:url(/Images/logo.jpg);
            background-size: cover;
            background-attachment: fixed;  
        }
        .content{
            background: white;
            width: 50%;
            padding: 40px;
            margin: 100px auto;
        }
        p{
            font-size: 25px;
            color:red;
        }
    </style>

        <div>
            <table style="width:100%;">
                <tr>
                    <td align="center">
                        <h1> Книжарница </h1>
                        <div style="float:right">
                            <strong>  Welcome back,</strong> 
                            <strong>
                                @(Session["loggedUser"] == null ? "Anonymous" : ((User)Session["loggedUser"]).Username)

                            </strong> !

                            @if (Session["loggedUser"] == null)
                            {
                                <a href="/home/login"> Login </a>
                            }
                            else
                            {
                                <a href="/home/logout"> Logout </a>
                            }


                        </div>
                    </td>
                </tr>
                <tr>
                    <td align="center">
                        
                        <ul style="list-style: none; font-size: 135%;">
                            <li  style="float:left; margin: 0 50px;"> <a href="/home/index"> Home</a> </li>
                            <li  style="float:left; margin: 0 50px;"> <a href="/user/index"> Users </a></li>
                            <li  style="float:left; margin: 0 50px;"> <a href="/contacts/index"> Contacts </a></li>
                            <li  style="float:left; margin: 0 50px;"> <a href="/Books/index"> Books </a></li>
                        </ul>
                    </td>
                </tr>
                <tr>

                    @RenderBody()

                </tr>
            </table>
        </div>
</body>
</html>